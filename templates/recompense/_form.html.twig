                        </div>
                        </div>
                        <div class="d-flex m-3 me-0">
                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                            <a href="#" class="position-relative me-4 my-auto">
                                <i class="fa fa-shopping-bag fa-2x"></i>
                                <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                            </a>
                            <a href="#" class="my-auto">
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    <!-- Page Header -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6"> Récompense</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_recompense_new') }}">Récompense</a></li>
            <li class="breadcrumb-item active text-white"> Récompense</li>
        </ol>
    </div>

    <!-- Formulaire d'ajout de récompense -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Ajouter une Récompense</h1>

                        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'enctype': 'multipart/form-data'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de la récompense'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.valeur, 'Valeur', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.valeur, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la valeur de la récompense'}}) }}
                            {{ form_errors(form.valeur) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la description de la récompense', 'rows': 4}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.disponibilite, 'Disponibilité', {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_widget(form.disponibilite, {'attr': {'class': 'form-check-input'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
                            {{ form_errors(form.image) }}
                            <small class="form-text text-muted">Formats acceptés : JPEG, PNG, GIF (max 5 Mo).</small>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.categorie) }}
                        </div>

                      
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                        <a href="{{ path('app_recompense_index') }}">Retour à la liste</a>


                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}