{% extends 'base.html.twig' %}

{% block title %}Inscription Client{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Inscription Client</h2>

            {% if form_errors(registrationForm) %}
                <div class="alert alert-danger mb-3">
                    {{ form_errors(registrationForm) }}
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}

            <div class="mb-3">
                <label for="registrationForm_email" class="form-label" style="font-size: 0.9rem;">Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Entrez votre email'}}) }}
            </div>

            <div class="mb-3">
                <label for="registrationForm_plainPassword" class="form-label" style="font-size: 0.9rem;">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Entrez votre mot de passe'}}) }}
            </div>

            <div class="mb-3">
                <label for="registrationForm_name" class="form-label" style="font-size: 0.9rem;">Nom</label>
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Entrez votre nom'}}) }}
            </div>

            <div class="mb-3">
                <label for="registrationForm_adresse" class="form-label" style="font-size: 0.9rem;">Adresse</label>
                {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Entrez votre adresse'}}) }}
            </div>

            <div class="mb-3">
                <label for="registrationForm_phonenumber" class="form-label" style="font-size: 0.9rem;">Numéro de téléphone</label>
                {{ form_widget(registrationForm.phonenumber, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Entrez votre numéro de téléphone'}}) }}
            </div>

            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm">S'inscrire</button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
